
<h1>Users</h1>
<hr>

<div>

<%= form_tag('/admins/list_users', method: :get) do %>
	<%= search_field_tag 'search',params[:search],:placeholder => 'Search by name and email' %>
	<%= select_tag :role, options_for_select(User.roles,:selected => params[:role])  %>
	<%= submit_tag 'Search' %>
<% end %>

	
