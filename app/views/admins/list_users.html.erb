</div>

<table class="table">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Destroy</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%=user.name %></td>
			<td><%=user.email %></td>
			<td><%=user.role %></td>
			<td><%= link_to 'Show', admins_show_path(user) %></td>
	        <td><%= link_to 'Edit', admins_edit_path(user) %></td>
	        <td><%= link_to 'Destroy', admins_destroy_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>	
</table>
